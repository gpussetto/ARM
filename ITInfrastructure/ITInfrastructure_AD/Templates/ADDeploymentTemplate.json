{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "newStorageAccountNamePrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix of the new storage account created to store the VMs disks, three different storage accounts will be created using this string as a prefix for the name"
            }
        },
        "storageAccountType": {
            "type": "string",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "The type of the Storage Account created"
            },
            "defaultValue": "Standard_LRS"
        },
        "location": {
            "type": "string",
            "allowedValues": [
                "West US",
                "East US",
                "West Europe",
                "East Asia",
                "Southeast Asia"
            ],
            "metadata": {
                "description": "The region to deploy the resources into"
            }
        },
        "AD_FQDN_Prefix": {
            "type": "string",
            "metadata": {
                "description": "Prefix of the domain name of the AD VMs, e.g. <something>.cloudapp.net"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Azure virtual network."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VMs and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the Administrator account of the new VMs and Domain"
            }
        },
        "assetLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources that the script is dependent on such as linked templates and DSC modules"
            }            
        }
    },
    "variables": {
        "compute_AvailabilitySet_AD_Name": "adAvailabilitySet",
        "compute_AvailabilitySet_AD_Id": "[resourceId('Microsoft.Compute/availabilitySets', variables('compute_AvailabilitySet_AD_Name'))]",

        "compute_VM_pdc_Name": "adPDC",
        "compute_VM_pdc_Id": "[resourceId('Microsoft.Compute/virtualMachines',variables('compute_VM_pdc_Name'))]",
        "compute_VM_pdc_Size": "Standard_D2",
        "compute_VM_pdc_ImagePublisher": "MicrosoftWindowsServer",
        "compute_VM_pdc_ImageOffer": "WindowsServer",
        "compute_VM_pdc_ImageSKU": "2012-R2-Datacenter",
        "compute_VM_pdc_DataDiskSize": 128,
        "compute_VM_pdc_ModulesURL": "[concat(parameters('assetLocation'),'/CreateADPDC.ps1.zip')]",
        "compute_VM_pdc_ConfigFunction": "CreateADPDC.ps1\\CreateADPDC",
        "compute_VM_pdc_Extension_Name": "[concat(variables('compute_VM_pdc_Name'),'/InstallDomainController')]",
        "compute_VM_pdc_Extension": "[concat('Microsoft.Compute/virtualMachines/',variables('compute_VM_pdc_Name'),'/extensions/InstallDomainController')]",

        "compute_VM_bdc_Name": "adBDC",
        "compute_VM_bdc_Id": "[resourceId('Microsoft.Compute/virtualMachines',variables('compute_VM_bdc_Name'))]",
        "compute_VM_bdc_Size": "Standard_D2",
        "compute_VM_bdc_ImagePublisher": "MicrosoftWindowsServer",
        "compute_VM_bdc_ImageOffer": "WindowsServer",
        "compute_VM_bdc_ImageSKU": "2012-R2-Datacenter",
        "compute_VM_bdc_DataDiskSize": 128,
        "compute_VM_bdc_ModulesURL": "[concat(parameters('assetLocation'),'/CreateADBDC.ps1.zip')]",
        "compute_VM_bdc_ConfigFunction": "CreateADBDC.ps1\\CreateADBDC",
        "compute_VM_bdc_Extension_Name": "[concat(variables('compute_VM_bdc_Name'),'/InstallBackupDomainController')]",
        "compute_VM_bdc_Extension": "[concat('Microsoft.Compute/virtualMachines/',variables('compute_VM_bdc_Name'),'/extensions/InstallBackupDomainController')]",

        "deployments_vnet_TemplateURL": "[concat(parameters('assetLocation'),'/DeploymentOfVnet.json')]",
        "deployments_vnetplusdns_TemplateURL": "[concat(parameters('assetLocation'),'/DeploymentOfVnetDNS.json')]",
        "deployments_domain_Name": "goliveIT.com",

        "network_PublicIPAddress_AD_Name": "ADPublicIP",
        "network_PublicIPAddress_AD_ResourceId": "[resourceId('Microsoft.Network/publicIPAddresses',variables('network_PublicIPAddress_AD_Name'))]",

        "network_LB_Public_Name": "publicLB",
        "network_LB_Public_Id": "[resourceId('Microsoft.Network/loadBalancers',variables('network_LB_Public_Name'))]",
        "network_LB_Public_FEName": "publicLBFE",
        "network_LB_Public_FEId": "[concat(variables('network_LB_Public_Id'),'/frontendIPConfigurations/',variables('network_LB_Public_FEName'))]",
        "network_LB_Public_BEName": "publicLBBE",
        "network_LB_Public_BEId": "[concat(variables('network_LB_Public_Id'),'/backendAddressPools/',variables('network_LB_Public_BEName'))]",

        "network_LB_Public_NatRule_pdc_Name": "pdcNat",
        "network_LB_Public_NatRule_pdc_Id": "[concat(variables('network_LB_Public_Id'),'/inboundNatRules/',variables('network_LB_Public_NatRule_pdc_Name'))]",
        "network_LB_Public_NatRule_pdc_PublicPort": "50101",

        "network_LB_Public_NatRule_bdc_Name": "bdcNat",
        "network_LB_Public_NatRule_bdc_Id": "[concat(variables('network_LB_Public_Id'),'/inboundNatRules/',variables('network_LB_Public_NatRule_bdc_Name'))]",
        "network_LB_Public_NatRule_bdc_PublicPort": "50102",

        "network_LB_Internal_Name": "internalLB",
        "network_LB_Internal_Id": "[resourceId('Microsoft.Network/loadBalancers',variables('network_LB_Internal_Name'))]",
        "network_LB_Internal_FEName": "internalLBFE",
        "network_LB_Internal_FEId": "[concat(variables('network_LB_Internal_Id'),'/frontendIPConfigurations/',variables('network_LB_Internal_FEName'))]",
        "network_LB_Internal_BEName": "internalLBBE",

        "network_vNet_Id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "network_vnet_AddressSpace": "10.0.0.0/16",

        "network_subnet_AD_name": "adSubnet",
        "network_subnet_AD_AddressSpace": "10.0.0.0/24",
        "network_subnet_AD_Id": "[concat(variables('network_vNet_Id'),'/subnets/',variables('network_subnet_AD_name'))]",

        "network_subnet_SQL_name": "sqlSubnet",
        "network_subnet_SQL_AddressSpace": "10.0.1.0/24",
        "network_subnet_SQL_Id": "[concat(variables('network_vNet_Id'),'/subnets/',variables('network_subnet_SQL_name'))]",

        "network_subnets_array": [
            {
                "name": "[variables('network_subnet_AD_name')]",
                "properties": {
                    "addressPrefix": "[variables('network_subnet_AD_AddressSpace')]"
                }
            },
            {
                "name": "[variables('network_subnet_SQL_name')]",
                "properties": {
                    "addressPrefix": "[variables('network_subnet_SQL_AddressSpace')]"
                }
            }
        ],

        "network_NIC_pdc_Name": "pdcNIC",
        "network_NIC_pdc_Id": "[resourceId('Microsoft.Network/networkInterfaces',variables('network_NIC_pdc_Name'))]",
        "network_NIC_pdc_PrivateIPAddress": "10.0.0.4",

        "network_NIC_bdc_Name": "bdcNIC",
        "network_NIC_bdc_Id": "[resourceId('Microsoft.Network/networkInterfaces',variables('network_NIC_bdc_Name'))]",
        "network_NIC_bdc_PrivateIPAddress": "10.0.0.5",

        "storage_Acct_1_Name": "[concat(parameters('newStorageAccountNamePrefix'), '0')]",
        "storage_Acct_1_Id": "[resourceId('Microsoft.Storage/storageAccounts',variables('storage_Acct_1_Name'))]",
        "storage_Acct_2_Name": "[concat(parameters('newStorageAccountNamePrefix'), '1')]",
        "storage_Acct_2_Id": "[resourceId('Microsoft.Storage/storageAccounts',variables('storage_Acct_2_Name'))]",
        "storage_Acct_3_Name": "[concat(parameters('newStorageAccountNamePrefix'), '2')]",
        "storage_Acct_3_Id": "[resourceId('Microsoft.Storage/storageAccounts',variables('storage_Acct_3_Name'))]",
        "storage_Acct_Container_Name": "vhds"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnetName')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('network_vnet_AddressSpace')]"
                    ]
                },
                "subnets": "[variables('network_subnets_array')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storage_Acct_1_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "accountType": "[parameters('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storage_Acct_2_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "accountType": "[parameters('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storage_Acct_3_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "accountType": "[parameters('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('network_PublicIPAddress_AD_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('AD_FQDN_Prefix')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[variables('network_LB_Public_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "[variables('network_LB_Public_FEName')]",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[variables('network_PublicIPAddress_AD_ResourceId')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('network_LB_Public_BEName')]"
                    }
                ],
                "inboundNatRules": [
                    {
                        "name": "[variables('network_LB_Public_NatRule_pdc_Name')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('network_LB_Public_FEId')]"
                            },
                            "protocol": "tcp",
                            "frontendPort": "[variables('network_LB_Public_NatRule_pdc_PublicPort')]",
                            "backendPort": 3389,
                            "enableFloatingIP": false
                        }
                    },
                    {
                        "name": "[variables('network_LB_Public_NatRule_bdc_Name')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('network_LB_Public_FEId')]"
                            },
                            "protocol": "tcp",
                            "frontendPort": "[variables('network_LB_Public_NatRule_bdc_PublicPort')]",
                            "backendPort": 3389,
                            "enableFloatingIP": false
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[variables('compute_AvailabilitySet_AD_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]"
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('network_NIC_pdc_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('network_vNet_Id')]",
                "[variables('network_LB_Public_Id')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "privateIP1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('network_NIC_pdc_PrivateIPAddress')]",
                            "subnet": {
                                "id": "[variables('network_subnet_AD_Id')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('network_LB_Public_BEId')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[variables('network_LB_Public_NatRule_pdc_Id')]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('network_NIC_bdc_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[parameters('vnetName')]",
                "[concat('Microsoft.Network/loadBalancers/',variables('network_LB_Public_Name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "privateIP1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[variables('network_NIC_bdc_PrivateIPAddress')]",
                            "subnet": {
                                "id": "[variables('network_subnet_AD_Id')]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('network_LB_Public_BEId')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[variables('network_LB_Public_NatRule_bdc_Id')]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('compute_VM_pdc_Name')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('storage_Acct_1_Id')]",
                "[variables('network_NIC_pdc_Id')]",
                "[variables('compute_AvailabilitySet_AD_Id')]",
                "[variables('network_LB_Public_Id')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('compute_VM_pdc_Size')]"
                },
                "availabilitySet": {
                    "id": "[variables('compute_AvailabilitySet_AD_Id')]"
                },
                "osProfile": {
                    "computername": "[variables('compute_VM_pdc_Name')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('compute_VM_pdc_ImagePublisher')]",
                        "offer": "[variables('compute_VM_pdc_ImageOffer')]",
                        "sku": "[variables('compute_VM_pdc_ImageSKU')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat('http://',variables('storage_Acct_1_Name'),'.blob.core.windows.net/',variables('storage_Acct_Container_Name'),'/',variables('compute_VM_pdc_Name'),'-osdisk.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                        {
                            "vhd": {
                                "uri": "[concat('http://',variables('storage_Acct_1_Name'),'.blob.core.windows.net/',variables('storage_Acct_Container_Name'),'/', variables('compute_VM_pdc_Name'),'data-1.vhd')]"
                            },
                            "name": "[concat(variables('compute_VM_pdc_Name'),'-data-disk1')]",
                            "createOption": "empty",
                            "caching": "None",
                            "diskSizeGB": "[variables('compute_VM_pdc_DataDiskSize')]",
                            "lun": 0
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[variables('network_NIC_pdc_Id')]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "name": "[variables('compute_VM_pdc_Extension_Name')]",
                    "apiVersion": "2015-05-01-preview",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[variables('compute_VM_pdc_Id')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.0",
                        "settings": {
                            "modulesUrl": "[variables('compute_VM_pdc_ModulesURL')]",
                            "configurationFunction": "[variables('compute_VM_pdc_ConfigFunction')]",
                            "properties": {
                                "domainName": "[variables('deployments_domain_Name')]",
                                "adminCreds": {
                                    "userName": "[parameters('adminUserName')]",
                                    "password": "PrivateSettingsRef:adminPassword"
                                }
                            }
                        },
                        "protectedSettings": {
                            "items": {
                                "adminPassword": "[parameters('adminPassword')]"
                            }
                        }
                    }
                }
            ]
        },
        {
			"type": "Microsoft.Resources/deployments",
			"name": "UpdateVNetDNS1",
			"apiVersion": "2015-01-01",
			"dependsOn": [
				"[variables('compute_VM_pdc_Extension')]"
			],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
				  "uri": "[variables('deployments_vnetplusdns_TemplateURL')]",
				  "contentVersion": "1.0.0.0"
				},
				"parameters": {
					"location": {"value":"[parameters('location')]"},
					"vnetName": {"value":"[parameters('vnetName')]"},
					"network_vnet_AddressSpace": {"value":"[variables('network_vnet_AddressSpace')]"},
					"network_subnets_array": {"value":"[variables('network_subnets_array')]"},
					"DNSServerAddress": {"value":["[variables('network_NIC_pdc_PrivateIPAddress')]"]}
				}
			}
		},
        {
            "apiVersion": "2015-05-01-preview",
            "name": "[variables('compute_VM_bdc_Name')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[variables('storage_Acct_2_Id')]",
                "[variables('network_NIC_bdc_Id')]",
                "[variables('compute_AvailabilitySet_AD_Id')]",
                "[variables('network_LB_Public_Id')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('compute_VM_bdc_Size')]"
                },
                "availabilitySet": {
                    "id": "[variables('compute_AvailabilitySet_AD_Id')]"
                },
                "osProfile": {
                    "computername": "[variables('compute_VM_bdc_Name')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('compute_VM_bdc_ImagePublisher')]",
                        "offer": "[variables('compute_VM_bdc_ImageOffer')]",
                        "sku": "[variables('compute_VM_bdc_ImageSKU')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat('http://',variables('storage_Acct_2_Name'),'.blob.core.windows.net/',variables('storage_Acct_Container_Name'),'/',variables('compute_VM_bdc_Name'),'-osdisk.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                        {
                            "vhd": {
                                "uri": "[concat('http://',variables('storage_Acct_2_Name'),'.blob.core.windows.net/',variables('storage_Acct_Container_Name'),'/', variables('compute_VM_bdc_Name'),'data-1.vhd')]"
                            },
                            "name": "[concat(variables('compute_VM_bdc_Name'),'-data-disk1')]",
                            "createOption": "empty",
                            "caching": "None",
                            "diskSizeGB": "[variables('compute_VM_bdc_DataDiskSize')]",
                            "lun": 0
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[variables('network_NIC_bdc_Id')]"
                        }
                    ]
                }
            }
        },
        {
			"type": "Microsoft.Compute/virtualMachines/extensions",
			"name": "[variables('compute_VM_bdc_Extension_Name')]",
			"apiVersion": "2015-05-01-preview",
			"location": "[parameters('location')]",
			"dependsOn":[
				"[variables('compute_VM_bdc_Id')]"
			],
			"properties": {
				"publisher": "Microsoft.Powershell",
				"type": "DSC",
				"typeHandlerVersion": "2.0",
				"settings": {
					"modulesUrl": "[variables('compute_VM_bdc_ModulesURL')]",
					"configurationFunction": "[variables('compute_VM_bdc_ConfigFunction')]",
					"properties": {
						"domainName": "[variables('deployments_domain_Name')]",
						"adminCreds":{
							"userName": "[parameters('adminUserName')]",
							"password": "PrivateSettingsRef:adminPassword"
						}
					}
				},
				"protectedSettings": {
					"items": {
						"adminPassword": "[parameters('adminPassword')]"
					}
				}
			}
		},
        {
            "name": "UpdateVNetDNS2",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[variables('compute_VM_bdc_Extension')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('deployments_vnetplusdns_TemplateURL')]",
                    "contentVersion": "1.0.0.0"
                },
				"parameters": {
					"location": {"value":"[parameters('location')]"},
					"vnetName": {"value":"[parameters('vnetName')]"},
					"network_vnet_AddressSpace": {"value":"[variables('network_vnet_AddressSpace')]"},
					"network_subnets_array": {"value":"[variables('network_subnets_array')]"},
					"DNSServerAddress": {"value":["[variables('network_NIC_pdc_PrivateIPAddress')]","[variables('network_NIC_bdc_PrivateIPAddress')]"]}
				}
            }
        }
    ]
}
